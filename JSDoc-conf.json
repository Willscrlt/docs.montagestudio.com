{
    "opts": {
        "encoding": "utf8",
        "destination": "api",
        "recurse": true
    },
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": ["node_modules/montage"],
        "exclude": ["node_modules/montage/node_modules"]
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": true,
        "default": {
            "outputSourceFiles": true
        }
    }
}
